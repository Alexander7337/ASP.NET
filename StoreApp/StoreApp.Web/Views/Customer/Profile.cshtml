@using StoreApp.Models.ViewModels.Customer
@model ProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

@Html.ActionLink("Edit", "EditProfile", "Customer")

<h3>Name: @Html.DisplayFor(pvm => pvm.Name)</h3>
<h3>Email: @Html.DisplayFor(pvm => pvm.Email)</h3>
<h3>Birth Date: @Html.DisplayFor(pvm => pvm.BirthDate)</h3>
<br/>
<h3>Products:</h3>

<table class="table table-bordered">
    <tr>
        <th>Brand</th>
        <th>Model</th>
    </tr>
    @foreach (var product in Model.BoughtProducts)
    {
        <tr>
            <td>@Html.DisplayFor(p => product.Name)</td>
            <td>@Html.DisplayFor(p => product.Model)</td>
        </tr>
    }
</table>

@Html.ActionLink("All Products", "Index", "Home")