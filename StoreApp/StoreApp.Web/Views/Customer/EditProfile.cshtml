@using StoreApp.Models.ViewModels.Customer
@model CustomerEditProfileVm

@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm())
{
    Html.HiddenFor(vm => vm.Id);

    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.UserName)
        @Html.EditorFor(vm => vm.UserName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div>
        <input type="submit" class="btn btn-lg btn-primary"/>
    </div>
}