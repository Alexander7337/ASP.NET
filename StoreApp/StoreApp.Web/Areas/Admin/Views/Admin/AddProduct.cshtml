@using StoreApp.Models.ViewModels.Admin
@model AddProductViewModel

@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post@*, new { @class = "form-horizontal", role = "form" }*@))
{
    <h3>Add New Product</h3>

    <div class="form-group">
        @Html.LabelFor(m => m.Name) 
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        <div>
            @Html.EditorFor(m => m.Model, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        <div>
            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        <div>
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl)
        <div>
            @Html.EditorFor(m => m.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-success" />
        </div>
    </div>
}

